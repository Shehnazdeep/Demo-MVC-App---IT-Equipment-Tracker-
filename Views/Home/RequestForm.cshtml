@model EquipmentRequest



<center> <h1> Request Form </h1></center>
<br>
<center><h5> Please fil out the form to request an equipment &#x1F4BB;</h5><br> </center>

<div class="container" style="display: flex; justify-content: center; align-items: center;">
<form asp-action="SaveRequest" method="post"> 

<div asp-validation-summary="All"> </div>

 <div class="form-group">
    <label for="Name">  Name</label>
    <input type="Text" asp-for="Name" >
    </div>
  
    <br>
 <div class="form-group">
    <label for="Email">  Email</label>
    <input type="Text" asp-for="Email" >
  </div>

    <br>

<div class="form-group">
    <label for="PhoneNumber">  Phone Number:  (e.g. 905-922-2222) </label>
    <input type="Text" asp-for="PhoneNumber" >
  </div>

    <br>

  <div>
            <label asp-for="Role">Please select your role</label>
            <select asp-for="Role">
                <option value="">Choose an option</option>
                <option value="student"> Student </option>
                <option value="professor"> Professor </option>
            </select>
        </div>
    <br>

<div>
 <label for="userType">Select required equipment:</label>
<select asp-for="EquipmentSelected" asp-items="Html.GetEnumSelectList<EquipmentRequest.EquipmentType>()"> <option selected="selected" value="">Please select the device type</option>
</select>
</div>

<br>

<div class="form-group">
    <label for="RequestDetails"> Request Details: </label>
    <input type="Text" asp-for="RequestDetails" >
    </div>

<br>


<div class="form-group">
    <label for="Duration"> Number Of Days? </label>
    <input type="Text" asp-for="Duration" >
  </div>






  <button type="submit" class="btn btn-primary">Submit</button>


    </form>
    </div>